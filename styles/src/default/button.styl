@import "constants";

button-default($background-color, $text-color) {
  background-color: $background-color;
  color: $text-color;
  &:hover {
    background-color: lighten($background-color, 10);
  }
  &:active {
    background-color: darken($background-color, 10);
  }
}

.{$prefix}button {
  button-default($color-default, $color-light);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 32px;
  padding: 0 8px;
  border-radius: $border-radius;
  cursor: pointer;
  user-select: none;

  &.-size-24 {
    height: 24px;
    padding: 0 4px;
    font-size: 14px;
  }

  &.-size-32 {
    height: 32px;
    padding: 0 8px;
    font-size: 16px;
  }

  &.-size-48 {
    height: 48px;
    padding: 0 16px;
    font-size: 20px;
  }

  &.-color-primary {
    button-default($color-primary, $color-light);
  }
}
